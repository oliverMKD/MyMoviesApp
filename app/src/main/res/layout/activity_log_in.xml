<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_700"
    tools:context="com.oliver.mymovies.LogIn">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginTop="50dp"
        android:id="@+id/slikaNaslovna"/>

    <EditText
        android:id="@+id/editUser"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:hint="username"
        android:textAlignment="center"
        android:textColor="@color/WhiteSmoke"
        />
    <EditText
        android:id="@+id/editPass"
        android:layout_width="250dp"
        android:layout_centerInParent="true"
        android:layout_height="wrap_content"
        android:textColor="@color/WhiteSmoke"
        android:inputType="textPassword"
        android:hint="password"
        android:textAlignment="center"
        android:layout_below="@+id/editUser"
        android:focusable="true"
        android:ems="10"/>
    <CheckBox
        android:id="@+id/cbShowPwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/editPass"
        android:layout_below="@+id/editUser"
        android:textColor="@color/White"
        android:background="@android:color/transparent"


        />
    <ImageView
        android:id="@+id/slikaCheck"
        android:layout_width="30dp"
        android:layout_height="27dp"
        android:layout_toRightOf="@+id/editPass"
        android:layout_below="@+id/editUser"
        android:textColor="@color/White"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="2dp"
        android:background="@drawable/ic_remove_red_eye"
        />


    <Button
        android:id="@+id/kopceLogIn"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/editPass"
        android:layout_centerInParent="true"
        android:background="@color/colorAccent2"
        android:textColor="@color/white"
        android:text="SIGN IN"/>
    <TextView
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="SIGN IN AS GUEST !!!"
        android:textAlignment="center"
        android:clickable="true"
        android:layout_marginTop="20dp"
        android:id="@+id/textGostin"
        android:textColor="@color/white"
        android:layout_below="@+id/kopceLogIn"/>
    <TextView
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:id="@+id/tekstzaNov"
        android:layout_below="@+id/textGostin"
        android:layout_centerInParent="true"
        android:text="Not on themoviedb.org?"
        android:textColor="@color/white"
        android:textAlignment="center"/>
    <TextView
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/tekstzaKreiranje"
        android:layout_below="@+id/tekstzaNov"
        android:layout_centerInParent="true"
        android:text=" Create an Account."
        android:clickable="true"
        android:textColor="@color/WhiteSmoke"
        android:textAlignment="center"/>

</RelativeLayout>
